<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_selct"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCCCCC"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_select_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="商品详情"
        android:textColor="#FF4887C5"
        android:background="#FFFFFFFF"
        android:textSize="20.0dip" />

    <ScrollView
        android:id="@+id/select_scroll"
        android:layout_width="fill_parent"
        android:layout_height="400dip"
        android:fadingEdge="vertical" >

        <LinearLayout
            android:id="@+id/layout_dialog_selct2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/zixun_list_item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wine_detail_content" />
        </LinearLayout>
    </ScrollView>
   <RelativeLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:background="#FFDDECFF">
       <TextView
        android:id="@+id/dialog_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="￥118"
        android:layout_marginLeft="10dip"
        android:textColor="#FF4887C5"
        android:background="#FFDDECFF"
        android:textSize="20.0dip" />
       <Button
                android:id="@+id/btn_gwc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_centerInParent="true"
                android:background="@drawable/join_gwc" />
       <Button
                android:id="@+id/btn_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/btn_gwc"
                android:background="@drawable/buy_now" />
       
    </RelativeLayout>

</LinearLayout>