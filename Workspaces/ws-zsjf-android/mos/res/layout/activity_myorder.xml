<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF" >

    <RelativeLayout
        android:id="@+id/base_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/zixun_list_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:contentDescription=""
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/zixun_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/zixun_list_item_img"
            android:gravity="left"
            android:paddingBottom="0.5dp"
            android:paddingLeft="5dip"
            android:paddingRight="50dip"
            android:paddingTop="2dp"
            android:singleLine="false"
            android:text="1861123****"
            android:textColor="#FF000000"
            android:textSize="17dip" />

        <TextView
            android:id="@+id/person_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zixun_list_item_title"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/zixun_list_item_img"
            android:gravity="left"
            android:paddingBottom="0.5dp"
            android:paddingLeft="5dip"
            android:paddingTop="2dp"
            android:singleLine="false"
            android:text="北京朝阳区福尔大厦1103室"
            android:textColor="#FF000000"
            android:textSize="17dip" />
        
         <ImageView
            android:id="@+id/guodu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zixun_list_item_img"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:contentDescription=""
            android:src="@drawable/guodu" />
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/order_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFFFF"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/base_info" >
        

        <RelativeLayout
            android:id="@+id/tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/person_tab1" >
            <TextView
            android:id="@+id/tv_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="0.5dp"
            android:paddingLeft="5dip"
            android:paddingTop="2dp"
            android:singleLine="false"
            android:text="我的定单"
            android:layout_marginLeft="18dip"
            android:textColor="#0761B7"
            android:textSize="17dip" />
        <TextView
             android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="0.5dp"
            android:paddingLeft="5dip"
            android:paddingTop="2dp"
            android:singleLine="false"
            android:text="我的收藏 "
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dip"
            android:textColor="#000000"
            android:textSize="17dip" />
        <TextView
            android:id="@+id/tv_renqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="0.5dp"
            android:paddingLeft="5dip"
            android:paddingTop="2dp"
            android:singleLine="false"
            android:text="历史记录"
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="17dip" />
        </RelativeLayout>

        <com.cattsoft.mos.widget.PullToRefreshListView
            android:id="@+id/wine_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:layout_marginTop="30dip"
            android:dividerHeight="8dp"
            android:fadeScrollbars="true" />
    </RelativeLayout>

</RelativeLayout>