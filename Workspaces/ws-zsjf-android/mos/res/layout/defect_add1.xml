<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
<RelativeLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/background">
	<com.cattsoft.mos.view.EditLabelText
	    android:id="@+id/defect_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_no"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
	    />
	<com.cattsoft.mos.view.SelectLabelText
	    android:id="@+id/defect_dept"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_dept"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_no"
                bgImage="@drawable/select_input_bg2"
                 hasStar="@string/star"
	    />
	<com.cattsoft.mos.view.EditLabelText
	    android:id="@+id/defect_submit_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_submit_person"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_dept"
	    />
	<com.cattsoft.mos.view.SelectLabelText
	    android:id="@+id/defect_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_time"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_submit_person"
                bgImage="@drawable/detail_info"
	    />
	<com.cattsoft.mos.view.EditLabelText
	    android:id="@+id/defect_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_address"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_time"
	    />
	<com.cattsoft.mos.view.EditLabelText
	    android:id="@+id/defect_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_desc"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_address"
	    />
	<com.cattsoft.mos.view.SelectLabelText
	    android:id="@+id/defect_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_type"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_desc"
                select="@string/defect_true"
                bgImage="@drawable/select_input_bg2"
                 hasStar="@string/star"
	    />
	<com.cattsoft.mos.view.SelectLabelText
	    android:id="@+id/defect_fenbu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_fenbu"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_type"
                select="@string/defect_true"
                bgImage="@drawable/select_input_bg2"
                hasStar="@string/star"
	    />
	<com.cattsoft.mos.view.SelectLabelText
	    android:id="@+id/defect_fenxiang"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                label="@string/defect_fenxiang"
                android:paddingLeft="10.0dip" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/defect_fenbu"
                select="@string/defect_true"
                bgImage="@drawable/select_input_bg2"
                 hasStar="@string/star"
	    />
	
	   <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="10dip" >
		
	    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/btn_reset"
        android:textColor="#FFFFFFFF"
        android:layout_alignParentLeft="true"
        android:textSize="16dip" />
	     
	    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/btn_next"
        android:textColor="#FFFFFFFF"
        android:layout_alignParentRight="true"
        android:textSize="16dip" />
	</RelativeLayout>
</RelativeLayout>
</ScrollView>
