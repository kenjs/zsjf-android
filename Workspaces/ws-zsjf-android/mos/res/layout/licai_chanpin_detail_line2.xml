<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/pro_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/prod_detail_head"
        android:gravity="left"
        android:paddingLeft="5dip"
        android:paddingTop="8dp"
        android:text="基本信息"
        android:layout_marginTop="15dip"
        android:textColor="#3d3d3d"
        android:textSize="18dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/pro_name"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/prod_detail_line2"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="5dip"
                android:text="收益率:"
                android:layout_marginRight="5dip"
                android:textColor="#3d3d3d"
                android:layout_gravity="center_horizontal"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/value_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="0dip"
                android:text="0.00"
                android:layout_toRightOf="@+id/label_0"
                android:textColor="#B1B1AF"
                android:layout_alignBottom="@+id/label_0"
                android:textSize="16dip" />
            <TextView
                android:id="@+id/label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="5dip"
                android:text="收益率:"
                android:layout_marginRight="5dip"
                android:layout_below="@+id/label_0"
                android:textColor="#3d3d3d"
                android:layout_gravity="center_horizontal"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="0dip"
                android:text="0.00"
                android:layout_toRightOf="@+id/label_2"
                android:textColor="#B1B1AF"
                android:layout_alignBottom="@+id/label_2"
                android:textSize="16dip" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:text="产品期限:"
                android:textColor="#3d3d3d"
                android:textSize="16dip" />
            
             <TextView
                android:id="@+id/value_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/label_1"
                android:text="3年"
                android:textColor="#B1B1AF"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dip"
                android:text="销售状态:"
                android:layout_marginRight="5dip"
                android:layout_below="@+id/label_1"
                android:textColor="#3d3d3d"
                android:textSize="16dip" />
            
            <TextView
                android:id="@+id/value_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingTop="10dp"
                android:text="再售"
                android:layout_toRightOf="@+id/label_3"
                android:layout_marginLeft="8dip"
                android:layout_alignBottom="@+id/label_3"
                android:textColor="#B1B1AF"
                android:textSize="16dip" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pro_code"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:visibility="invisible" />

</RelativeLayout>