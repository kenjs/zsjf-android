<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_selct"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/finish_order_bg"
    android:orientation="vertical" >
    
     <ImageView
            android:id="@+id/pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="100dip"
            android:layout_centerHorizontal="true"
            android:contentDescription=""
            android:src="@drawable/pingjia" />
      <ImageView
            android:id="@+id/finddaiija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_centerHorizontal="true"
            android:contentDescription=""
            android:layout_below="@+id/pingjia"
            android:src="@drawable/finddaiija" />
      
       <ImageView
            android:id="@+id/after_wine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:layout_centerHorizontal="true"
            android:contentDescription=""
            android:layout_below="@+id/finddaiija"
            android:src="@drawable/after_wine" />
 

</RelativeLayout>